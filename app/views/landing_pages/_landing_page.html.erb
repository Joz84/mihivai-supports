<div class="d-flex justify-content-center flex-column w-100">
  <div class="rounded mx-auto page-card normal-btn">
    <div class="card-body">
      <h6 class="card-subtitle mb-2 text-muted">Visiter cette page :</h6>
      <h2 class="card-title"><%= link_to page.title, user_landing_page_path(page), target: :blank %></h2>
      <hr/>
      <div class="d-flex justify-content-around w-100">
        <h6 class="card-subtitle mb-2 text-muted">
          <%= link_to edit_user_landing_page_path(page) do %>
            Modifier
            <i class="fas fa-pen-square"></i>
          <% end %>
        </h6>
      </div>
    </div>
  </div>
  <div class="d-flex flex-wrap justify-content-center align-item-center">
    <% page.users.each do |user| %>
      <div class="mt-2 mb-3 mx-3 d-flex align-items-center">
        <div class="bubble">
          <%= user.first_name[0] %><%= user.last_name[0] %>
        </div>
      </div>
    <% end %>
  </div>
</div>
