
<div class="rounded mx-3" style="width: 20rem;border:1px solid rgb(0,175,160)">
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted">Visiter cette page :</h6>
    <h2 class="card-title"><%= link_to page.title, user_landing_page_path(page)%></h2>
    <hr/>
    <div class="d-flex justify-content-around w-100">
      <h3 class="card-subtitle mb-2 text-muted">
        <%= link_to edit_user_landing_page_path(page) do %>
          <i class="fas fa-pen-square"></i>
        <% end %>
      </h3>
      <h3 class="card-subtitle mb-2 text-muted">
        <%= link_to user_landing_page_path(page), method: :delete do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </h3>
    </div>
  </div>
</div>
