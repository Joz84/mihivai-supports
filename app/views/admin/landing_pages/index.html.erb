<h1>Admin::LandingPages#index</h1>

<%= simple_form_for :search, url: admin_landing_pages_path, method: :get do |f| %>
  <%= f.input :promotion_id, collection: Promotion.all %>
  <%= f.button :submit %>
<% end %>

<ol>
  <% @landing_pages.each do |lp| %>
    <li id="landing-pages-<%= lp.id %>">
      <h2><%= lp.title %></h2>
      <div class="rating"><%= lp.rating %></div>
      <%= simple_form_for lp, url: admin_landing_page_path(lp), remote: true do |f| %>
        <%= f.input :rating, label: false %>
        <%= f.button :submit, "modifier" %>
      <% end %>

      <ul>
        <% lp.users.each do |user| %>
          <li><%= user.full_name %></li>
        <% end %>
      </ul>
      <hr>
    </li>
  <% end %>
</ol>
