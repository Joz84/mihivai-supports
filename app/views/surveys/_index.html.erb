<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% surveys.each do |survey| %>
      <tr>
        <% unless survey.questions.empty? && !current_user.admin? %>
          <td><%= survey.title %></td>
          <td><%= Survey.answered(survey, current_user) != true ? (link_to 'Répondre à ce questionnaire', user_survey_path(survey)) : "Vous avez déjà répondu." %></td>
        <% end %>
        <% if current_user.admin?%>
          <td><%= link_to 'Edit', edit_admin_survey_path(survey) %></td>
          <td><%= link_to 'Destroy', admin_survey_path(survey), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
