<div class="d-md-flex flex-wrap">
  <div class="container-fluid text-center" style="width:30%; overflow:auto;display:block;" id="display_landing_pages">
    <h1 class="display-4 mt-5 mb-5" style="color:white">Mes pages</h1>
    <div class="mt-5 d-md-flex flex-wrap justify-content-center text-center align-item-center mx-auto" style="width:22rem">
      <% current_user.landing_pages.each do |page| %>
        <div class="d-flex justify-content-center flex-column">
          <%= render "landing_pages/landing_page", page: page %>
          <div class="d-flex flex-wrap justify-content-center align-item-center">
            <% page.users.each do |user| %>
              <div class="mt-2 mb-3 mx-3">
                <%= user.first_name %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container-fluid p-3 m-4 rounded" style="width:60%; background:#74C7BE;color:white !important;  box-shadow:4px 4px 20px -1px rgba(0,0,0,0.2);" id="new_landing_pages">
    <%= render "form", landing_page: @landing_page, url: user_landing_pages_path %>
  </div>
</div>
