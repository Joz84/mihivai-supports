
<%= simple_form_for landing_page, url: url, remote: true do |f| %>

  <% if landing_page.errors.any? %>
    <div id="error_explanation" class="p-3 mb-2 border text-danger">
      <h5><%= pluralize(landing_page.errors.count, "error") %> have been raised :</h5>

      <ul>
      <% landing_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "TITRE *" %>
    <%= f.input :title, class:"form-control", placeholder:"Ex: Portfolio", label: false %>
  </div>

  <div class="form-group">
    <div class="d-flex align-items-baseline">
      <i class="far fa-file-code pr-2"></i>
      <i class="fab fa-html5 pr-2"></i>
      <%= f.label :html, "Fichier index.html *" %>
    </div>
    <%= f.input :html, class:"form-control", :input_html => {:rows => 20}, placeholder:"Ex: <h1> Bonjour ! </h1>", label: false %>
  </div>
  <div class="form-group">
    <div class="d-flex align-items-baseline">
        <i class="far fa-file-code pr-2"></i>
        <i class="fab fa-css3-alt pr-2"></i>
        <%= f.label :css, "Fichier style.css"%>
    </div>
    <%= f.input :css, class:"form-control", :input_html => {:rows => 20}, placeholder:"Ex: h1 { color : black ;}",label: false %>
  </div>

  <div class="form-group">
    <div class="d-flex align-items-baseline">
      <i class="fas fa-file-image pr-2"></i>
      <label>Ajouter des images</label><br>
    </div>

    <% if landing_page.images.attached? %>
      <% landing_page.images.each do |image| %>
        <% unless image.blob.nil? %>
          <div id="image-<%= image.blob_id %>" class="d-flex my-2">
            <%= image.filename %>
            <div class="delete-image">
              <%= link_to delete_image_attachment_user_landing_page_url(image.signed_id), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="far fa-trash-alt ml-3"></i>
            </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <div id="upload-images">
      <label class="small-btn upload_image">
        <p class="m-0 image-labels">Ajouter une image</p>
        <%= f.file_field :images, multiple: true, label:false %>
      </label>
    </div>
  </div>

  <div id="landing_pages-users">
    <div class="d-flex align-items-baseline">
      <i class="fas fa-users pr-2"></i>
      <p>Ajouter / Enlever des collaborateurs</p>
    </div>
    <div class="card" style="width: 18rem;">
      <ul class="list-group list-group-flush" style="color:black !important; height:9rem; display:block; overflow:auto">
        <%= f.association :users, collection: @users, :as => :check_boxes, :wrapper_html => {class:"px-3 py-2 d-flex flex-column justify-content-center"},include_hidden: false, :input_html => {:multiple => true}, label: false %>
      </ul>
    </div>
  </div>

  <div class="form-group w-100 text-center mt-4">
      <%= f.submit (params[:controller] == "user/landing_pages" && params[:action] == "edit") ? "Sauvegarder" : "Ajouter ma page", class:"small-btn" %>
  </div>
<% end %>
