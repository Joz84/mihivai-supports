<%= simple_form_for project, url: url  do |f| %>
  <div class="w-75 mx-auto">
    <h2 class="mt-2 mb-5 text-center" style="color:white;font-weight:900">Ajouter un projet</h1>

    <div class="d-flex w-100 justify-content-around">
      <div class="form-group w-50">
        <p> URL * </p>
        <%= f.input :url, class:"form-control", placeholder: "http://mihivai-supports.herokuapp.com/", label: false %>
      </div>

      <div id="projects-users">
        <div class="d-flex align-items-baseline">
          <i class="fas fa-users pr-2"></i>
          <p>Ajouter / Enlever des users</p>
        </div>
        <div class="card" style="width: 18rem;">
          <ul class="list-group list-group-flush" style="color:black !important; height:9rem; display:block; overflow:auto">
            <%= f.association :users, collection: @users, :as => :check_boxes, :wrapper_html => {class:"px-3 py-2 d-flex flex-column justify-content-center"},include_hidden: false, :input_html => {:multiple => true}, label: false %>
          </ul>
        </div>
      </div>
    </div>

    <div class="form-group w-100 text-center mt-5">
        <%= f.submit (params[:controller] == "user/projects" && params[:action] == "edit") ? "Sauvegarder" : "Soumettre", class:"btn btn-light btn-lg" %>
    </div>
  </div>
<% end %>
