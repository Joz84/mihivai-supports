    <% @courses.each_with_index do |course, index| %>
      <%= link_to course, class:"btn", style:"text-decoration:none" do %>
        <div class="btn btn-light" style="width: 15rem;border:1px solid rgb(0,175,160)">
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">Cours nÂ°<%= index + 1 %></h6>
            <h2 class="card-title"><%= course.title %></h2>
            <hr/>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
